.modal-wrapper
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  display flex
  justify-content center
  background-color #00000090

.modal
  position absolute
  top 50vh
  transform: translateY(-50%);
  display flex
  flex-direction column
  align-items center
  padding 16px
  background-color #212125;
  border 1px solid #1a1a1d;
  border-radius 4px

.modal-close
  position absolute
  top 0
  right 0
  padding 3px 7px
  cursor pointer
