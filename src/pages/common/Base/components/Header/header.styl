.header
  height 600px
  display flex
  flex-direction column

  &-toolbar
    display flex
    justify-content flex-end
    width 900px
    background-color #212125
    padding 8px
    border 1px solid #1a1a1d
    border-top none
    border-bottom-left-radius 4px
    border-bottom-right-radius 4px

    .button
      margin-left 8px
  
  &-logo
    object-fit contain
    margin auto

@media screen and (max-width: 600px)
  .header
    height 35vh

    &-toolbar
      width 100%

    &-logo
      width 75%
